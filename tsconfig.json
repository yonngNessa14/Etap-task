{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "module": "es2015",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "sourceMap": true,
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": ["./src/types"],
    "baseUrl": "src",
    "paths": {
      "@components": ["components"],
      "@components/*": ["components/*"],
      "@screens": ["screens"],
      "@screens/*": ["screens/*"],
      "@navigators": ["navigators"],
      "@navigators/*": ["navigators/*"],
      "@services": ["services"],
      "@services/*": ["services/*"],
      "@theme": ["theme"],
      "@theme/*": ["theme/*"],
      "@hooks": ["hooks"],
      "@hooks/*": ["hooks/*"],
    }
  },
  "extends": "@react-native/typescript-config/tsconfig.json"
}
